@page "/scriptures/all"
@model MyScriptureJournal.Pages.Scriptures.ViewAllScriptureEntriesModel
@{
}

<h1>All Scripture Entries</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Volume</th>
            <th>Book</th>
            <th>Chapter</th>
            <th>From Verse</th>
            <th>To Verse</th>
            <th class="note-width">Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var scripture in Model.ScriptureEntries!)
        {
            <tr>
                <td>@scripture.Id</td>
                <td>@scripture.Volume</td>
                <td>@scripture.Book</td>
                <td>@scripture.Chapter</td>
                <td>@scripture.FromVerse</td>
                <td>@scripture.ToVerse</td>
                <td>@scripture.Note</td>
                <td><a asp-page="DisplayScriptureEntry" asp-route-id="@scripture.Id">Display</a></td>
                <td><a asp-page="EditScriptureEntry" asp-route-id="@scripture.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>