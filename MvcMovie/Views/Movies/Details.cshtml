@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details of The Movie";
}

<h1>Movie Details</h1>

<div>
    <hr />
    <dl class="row">
        <div class="col-md-5">
            <dt>
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class="text-primary mb-1"}):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.LabelFor(model => model.ReleaseDate, htmlAttributes: new { @class="text-primary mb-1"}):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class="text-primary mb-1"}):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class="text-primary mb-1"}):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class="text-primary mb-1"}):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Rating)
            </dd>
        </div>
        <div class="col-md-6">
            <dd>
                <img src="~/images/movies/@Model.ImageFileName"
                     alt=@Html.DisplayFor(model => model.Title) />
            </dd>
        </div>
    </dl>
    <div class="form-group">
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </div>
</div>
